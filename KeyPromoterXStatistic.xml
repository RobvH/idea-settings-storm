<application>
  <component name="KeyPromoterXStatistic">
    <option name="statistics">
      <Statistic Action="Edit Maximized">
        <Item>
          <IdeaActionID>Console.TableResult.EditValueMaximized</IdeaActionID>
          <ShortCut>'⇧⏎' or '⌥⇧⏎'</ShortCut>
          <Description>Edit Maximized</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Pull...">
        <Item>
          <IdeaActionID>Git.Pull</IdeaActionID>
          <ShortCut>'⌃⌥⌘↓'</ShortCut>
          <Description>Pull...</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Stop 'tests'">
        <Item>
          <IdeaActionID>Stop</IdeaActionID>
          <ShortCut>'⌘F2'</ShortCut>
          <Description>Stop 'tests'</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
    </option>
  </component>
</application>